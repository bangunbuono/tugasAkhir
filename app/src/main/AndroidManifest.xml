<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fixinventori">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FixInventori"
        tools:targetApi="31">
        <activity
            android:name=".Chat.Activity.ChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".Activity.Setting.UserManagerConnect"
            android:exported="false" />
        <activity
            android:name="com.example.fixinventori.Activity.User.ManagerRegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ManagerMainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.fixinventori.Activity.User.ManagerLoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.fixinventori.Activity.Report.ReportDetail"
            android:exported="false"
            android:parentActivityName="com.example.fixinventori.Activity.Report.InventReport" />
        <activity
            android:name="com.example.fixinventori.Activity.Menu.KomposisiEdit"
            android:exported="false" />
        <activity
            android:name="com.example.fixinventori.Activity.User.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.example.fixinventori.Activity.User.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.fixinventori.Activity.Usage.UsageKomposisiDetail"
            android:exported="false"
            android:parentActivityName="com.example.fixinventori.Activity.Usage.InventUsage" />
        <activity
            android:name="com.example.fixinventori.Activity.Stock.AddStock"
            android:exported="false" />
        <activity
            android:name="com.example.fixinventori.Activity.Stock.InventorySetDetail"
            android:exported="false"
            android:parentActivityName="com.example.fixinventori.Activity.Stock.InventorySet" />
        <activity
            android:name="com.example.fixinventori.Activity.Menu.KomposisiSet"
            android:exported="false" />
        <activity
            android:name="com.example.fixinventori.Activity.Menu.MenuSetDetail"
            android:exported="false"
            android:parentActivityName="com.example.fixinventori.Activity.Menu.MenuSet" />
        <activity
            android:name="com.example.fixinventori.Activity.Menu.AddMenu"
            android:exported="false"
            android:parentActivityName="com.example.fixinventori.Activity.Menu.MenuSet" />
        <activity
            android:name="com.example.fixinventori.Activity.Report.InventReport"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name="com.example.fixinventori.Activity.Forecast.InventForecast"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name="com.example.fixinventori.Activity.Restock.InventRestock"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
