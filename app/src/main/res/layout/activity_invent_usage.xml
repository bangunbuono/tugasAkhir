<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context="com.example.fixinventori.Activity.Usage.InventUsage">

    <RadioGroup
        android:id="@+id/radiogroupUsage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <RadioButton
            android:id="@+id/radio_usage_auto"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/usageauto_selector"
            android:button="@drawable/null_usage_button"
            android:checked="true"
            android:onClick="usageSelector"
            android:text="Auto"
            android:textAlignment="center"
            android:textColor="@drawable/usage_text_selector"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio_usage_manual"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/usagemanual_selector"
            android:button="@drawable/null_usage_button"
            android:onClick="usageSelector"
            android:text="Manual"
            android:textAlignment="center"
            android:textColor="@drawable/usage_text_selector"
            android:textStyle="bold" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/flUsage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

</LinearLayout>