<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_8sdp"
    android:padding="@dimen/_5sdp">
    
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:id="@+id/rivProfileChat"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        android:background="@drawable/rounded_image"
        android:layout_alignBottom="@id/tvOtherMessage"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvOtherMessage"
        android:background="@drawable/other_message_background"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/rivProfileChat"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_4sdp"
        android:padding="@dimen/_12sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDateTime"
        android:textColor="@color/design_default_color_on_secondary"
        android:layout_below="@id/tvOtherMessage"
        android:textSize="@dimen/_8ssp"
        android:layout_alignStart="@id/tvOtherMessage"
        android:layout_marginTop="@dimen/_3sdp"
        />

</RelativeLayout>