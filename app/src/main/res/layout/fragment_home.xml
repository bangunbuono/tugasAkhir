<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context=".BottomNavBar.HomeFragment">

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/homeFragment"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="5dp"
        android:fontFamily="serif"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="28dp"
        app:cardBackgroundColor="#EAEAEA"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnInvSet"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="12dp"
                    android:drawableTop="@drawable/stock"
                    android:paddingTop="10sp"
                    android:text="Pengaturan stok"
                    app:cornerRadius="@dimen/_25sdp" />

                <Button
                    android:id="@+id/btnUsage"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="12dp"
                    android:text="stok keluar"
                    app:cornerRadius="@dimen/_25sdp" />

                <Button
                    android:id="@+id/btnForecast"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="12dp"
                    android:text="perkiraan"
                    app:cornerRadius="@dimen/_25sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnMenuSet"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="12dp"
                    android:drawableTop="@drawable/food_menu"
                    android:paddingTop="12sp"
                    android:text="menu"
                    app:cornerRadius="@dimen/_25sdp" />

                <Button
                    android:id="@+id/btnRestock"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="12dp"
                    android:text="stok masuk"
                    app:cornerRadius="@dimen/_25sdp" />

                <Button
                    android:id="@+id/btnReport"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="12dp"
                    android:text="Laporan"
                    app:cornerRadius="@dimen/_25sdp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>