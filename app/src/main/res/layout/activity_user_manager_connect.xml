<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:clipToPadding="false"
    android:gravity="center"
    tools:context=".Activity.Setting.UserManagerConnect">

    <EditText
        android:id="@+id/etInputUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="masukan username"/>

    <EditText
        android:id="@+id/etInputUserToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@id/etInputUsername"
        android:hint="masukan token"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConnect"
        android:layout_below="@id/etInputUserToken"
        android:text="Sambungkan"/>

</RelativeLayout>